proceso minicalculadora
  Definir num_a, num_b, num_res como Real;
  Definir opcion como Entero;
  
  Escribir "Introducir numero a";
  leer num_a;
  Escribir "Introducir numero b";
  leer num_b;
  Escribir "Introducir 1(suma), 2(resta)";
  leer opcion;
  
  si (opcion =1) entonces
      num_res = num_a + num_b;
      Escribir "La suma de ", num_a," y de ", num_b," es de ",num_res;
  sino
      si (opcion = 2) entonces
         num_res = num_a - num_b;
         Escribir "La resta de ", num_a," y de ", num_b," es de ",num_res;
      sino
         Escribir "Esa operación no esta permitida";
     finsi
 finsi
 
 Limpiar Pantalla;
 Escribir "Se van a multiplicar 2 numeros";
 Escribir "";
 Escribir "ingresa el primer numero";
 Escribir "";
 leer a;
 Escribir "";
 Escribir "ingresa el segundo numero";
 Escribir "";
 leer b;
 Escribir "";				
 Escribir "el resultado de la multiplicacion es ",mul(a,b);
 Escribir "";
 
 
 Limpiar Pantalla;
 Escribir "Se van a dividir 2 numeros";
 Escribir "";
 Escribir "ingresa el primer numero (Dividendo)";
 Escribir "";
 leer a;
 Escribir "";
 Escribir "ingresa el segundo numero (Divisor)";
 Escribir "";
 leer b;
 Escribir "";				
 Escribir "el resultado de la division es ",div(a,b);
 Escribir "";
 
finproceso
  
SubProceso multiplicacion = mul(a,b)		
	Definir multiplicacion Como Real;
	multiplicacion = a * b;
FinSubProceso

SubProceso division = div(a,b)				
	definir division Como Real;
	division = a / b;
FinSubProceso

